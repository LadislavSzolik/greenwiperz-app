#!/bin/bash
source .env
# Create database
SQLQUERY="
  CREATE DATABASE IF NOT EXISTS ${DB_DATABASE};
  CREATE USER IF NOT EXISTS '${DB_USERNAME}'@'%' IDENTIFIED BY '${DB_PASSWORD}';
  GRANT ALL PRIVILEGES ON ${DB_DATABASE}.* TO '${DB_USERNAME}'@'%' IDENTIFIED BY '${DB_PASSWORD}' WITH GRANT OPTION;
  FLUSH PRIVILEGES;
"
bin/rootMysql "${SQLQUERY}"
